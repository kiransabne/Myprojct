<p id="notice"><%= notice %></p>

<h1>Listing Subcategories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.name %></td>
        <td><%= link_to image_tag(subcategory.image_url), subcategory_products_path(:subcategory_id => subcategory.id) %>
        <td><%= link_to 'Show', subcategory %></td>
        <td><%= link_to 'Edit', edit_category_subcategory_path(@category,subcategory) %></td>
        <td><%= link_to 'Destroy', category_subcategory_path(@category, subcategory), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<b><%= link_to 'Go to Category', categories_path%></b><br>
<br><%= link_to 'New Subcategory', new_category_subcategory_path(@category) %>