<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
  <%= render "search" %>
  <table>
   <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |pro| %>
      <tr>
        <td><%= pro.name %></td>
        <td><%= pro.price %></td>
        <td><%= image_tag(pro.image_url)%></td>
        <td><%= link_to 'Show', pro %></td>
        <td><%= link_to 'Edit', edit_product_path(pro) %></td>
        <td><%= link_to 'Destroy', pro, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br> 
<%= link_to 'New Product', new_product_path %>
